        return getOptionValue("AskDownLocation");
    }
	/**
	 *设置是否询问下载保存位置
	 */
	 this.setAskSaveLocation=function(value)
    {
     	setOptionValue("AskDownLocation", value);
    }
	
	/**
     * 查询是否询问显示下载窗口
