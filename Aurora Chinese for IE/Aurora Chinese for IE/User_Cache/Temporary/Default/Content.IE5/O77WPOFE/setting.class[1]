    this.getShowDownlistWnd=function(value)
    {
        return getOptionValue("ShowDownlistWnd");
    }
	/**
	 *设置是否询问显示下载窗口
	 */
	 this.setShowDownlistWnd=function(value)
    {
     	setOptionValue("ShowDownlistWnd", value);
    }
	
	/**
     * 查询鼠标手势的状态
     */
	 for(var i=0;i<=15;i++){
		eval('this.getMouseGestureNum' + i + '=function(value){return getOptionValue("MouseGesture' + i + '");} ');
		}
	/**
     * 设置鼠标手势的状态
     */
	 for(var i=0;i<=15;i++){
		eval('this.setMouseGestureNum' + i + '=function(value){return setOptionValue("MouseGesture' + i + '", value);}');
		}
		
	/**
	 *设置购物助手显示
	 */
	this.setGWDSetting=function(value)
    {
     	setOptionValue("GWDDisplayMode", value);
    }
	
	/**
     * 查询购物助手显示
     */
    this.getGWDSetting=function(value)
    {
        return getOptionValue("GWDDisplayMode");
    }
	
	this.ExtGetAppData=function(value)
    {
       return window.external.ExtGetAppData(superCode,value);
    }

	/**
     *设置buscape购物助手显示
     */
    this.setShopHelperSetting=function(value)
    {
        setOptionValue("shoppingHelperMode", value);
    }

    /**
     * 查询buscape购物助手显示
     */
    this.getShopHelperSetting=function(value)
    {
        return getOptionValue("shoppingHelperMode");
    }

	/**
     * juzi 翻译功能接口
     */
	this.translateSetting=function(act,value)
    {
        return window.external.ExtTranslateList(superCode, act ,value);
    }
	
    this.getTranslateMode=function(value)
    {
        return getOptionValue("ShowTranslatorIcon");
    }
	
	this.setTranslateMode=function(value)
    {
        return setOptionValue("ShowTranslatorIcon" , value);
    }

    /**
     * 翻译功能接口--aurora checkbox
     */
     //查询
    this.getTranslateHelperMode=function(value)
    {
        return getOptionValue("translateHelperMode");
    }
    //设置
    this.setTranslateHelperMode=function(value)
    {
        return setOptionValue("translateHelperMode" , value);
    }


	/**
     * 开启密码保存接口
     */
    this.getLoginAssis=function(value)
    {
        return getOptionValue("LoginAssisEnable");
    }
	this.setLoginAssis=function(value)
    {
        return setOptionValue("LoginAssisEnable" , value);
    }
	/**
     * 密码操作接口
     */
	this.getLoginList=function(type, param)
    {
        return window.external.ExtGetLoginList(superCode, type, param);
    }
	
