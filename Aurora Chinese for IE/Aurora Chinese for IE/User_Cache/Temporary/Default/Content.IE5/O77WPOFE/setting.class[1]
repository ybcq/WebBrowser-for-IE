        setOptionValue("BossKey", value);
    }
	
	/**
     * 设置老板鼠标键
     */
    this.setBossKeyMidKey=function(value)
    {
     	setOptionValue("bossKeyMidKey", value);
    }

    /**
     * 查询老板鼠标键
     */
    this.getBossKeyMidKey=function(value)
    {
        return getOptionValue("bossKeyMidKey");
    }
	
	/**
     * 下载工具选择
     */
    this.GetDownTools=function()
    {
        return window.external.ExtGetDownTools(superCode);
    }
	
	/**
	 *设置下载默认工具
	 */
	this.setDownloadPolicy=function(value)
    {
     	setOptionValue("DownDefault", value);
    }
	
	/**
     * 查询下载默认工具
     */
    this.getDownloadPolicy=function(value)
    {
        return getOptionValue("DownDefault");
    }
	
	/**
     * 查询是否询问下载保存位置
     */
    this.getAskSaveLocation=function(value)
