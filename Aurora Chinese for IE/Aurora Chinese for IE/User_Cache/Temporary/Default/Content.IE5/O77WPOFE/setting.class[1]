 /**
 * setting类
 */
function setting(){

    /**
     * 构造处
     * 设置秘钥
     */
    var superCode = window.external.ExtGetSuperCode(window);
	
    /**
     * 设置选项值
     */
    function setOptionValue(key, value)
    {
        window.external.ExtSetOptionValue(superCode, key, value);
    }

    /**
     * 获取选项值
     */
    function getOptionValue(key)
    {
        return window.external.ExtGetOptionValue(superCode, key);
    }

    /**
     * 设置启动时打开
     */
	this.setStartPageType=function(value)
	{
        setOptionValue("StartPageType", value);
	}

    /**
     * 获取启动时打开
     */
    this.getStartPageType=function()
    {
        return getOptionValue("StartPageType");
    }

    /**
     * 设置自定义主页
     */
    this.setHomePage=function(value)
    {
        setOptionValue("HomePage", value);
    }

    /**
     * 获取自定义主页
     */
    this.getHomePage=function()
    {
        return getOptionValue("HomePage");
    }

    /**
     * 设置广告过滤
     */
    this.setADFilterClass=function(value)
    {
        setOptionValue("ADFilterClass", value);
    }

    /**
     * 获取广告过滤
     */
    this.getADFilterClass=function()
    {
        return getOptionValue("ADFilterClass");
    }

    /**
     * 设置弹出广告
     */
    this.setWinBlock=function(value)
    {
        setOptionValue("WinBlock", value);
    }

    /**
     * 获取弹出广告
     */
    this.getWinBlock=function()
    {
        return getOptionValue("WinBlock");
    }

    /**
     * 设置页面广告
     */
    this.setAdBlock=function(value)
    {
        setOptionValue("AdBlock", value);
    }

    /**
     * 获取页面广告
     */
    this.getAdBlock=function()
    {
        return getOptionValue("AdBlock");
    }

    /**
     * 获取不过滤网站
     */
    this.getWinBlockList=function()
    {
        return window.external.ExtGetWinBlockList(superCode, true);
    }

    /**
     * 删除不过滤网站
     */
    this.delWinBlockItem=function(value)
    {
        window.external.ExtDelWinBlockItem(superCode, value);
    }

    /**
     * 设置上网痕迹
     */
    this.setCleanPrivacy=function(value)
    {
        setOptionValue("CleanPrivacy", value);
    }

    /**
     * 获取上网痕迹
     */
    this.getCleanPrivacy=function()
    {
        return getOptionValue("CleanPrivacy");
    }

    /**
     * 设置自动清除
     */
    this.setCleanPrivacyOnExit=function(value)
    {
        setOptionValue("CleanPrivacyOnExit", value);
    }

    /**
     * 获取自动清除
     */
    this.getCleanPrivacyOnExit=function()
    {
        return getOptionValue("CleanPrivacyOnExit");
    }

    /**
     * 设置在新标签打开地址栏输入的网址
     */
    this.setNewTabFromAddrBox=function(value)
    {
        setOptionValue("NewTabFromAddrBox", value);
    }

    /**
     * 获取在新标签打开地址栏输入的网址
     */
    this.getNewTabFromAddrBox=function()
    {
        return getOptionValue("NewTabFromAddrBox");
    }

