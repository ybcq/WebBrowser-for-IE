     * 获取在新标签打开收藏夹里的网址
     */
    this.getNewTabFromBookmark=function()
    {
        return getOptionValue("NewTabFromBookmark");
    }

    /**
     * 设置点击链接新打开标签时，自动切换到该标签
     */
    this.setAlwaysActiveNewTab=function(value)
    {
        setOptionValue("AlwaysActiveNewTab", value);
    }

    /**
     * 获取点击链接新打开标签时，自动切换到该标签
     */
    this.getAlwaysActiveNewTab=function()
    {
        return getOptionValue("AlwaysActiveNewTab");
    }

    /**
     * 设置新打开标签放在
     */
    this.setNewTabAlignment=function(value)
    {
        setOptionValue("NewTabAlignment", value);
    }

    /**
     * 获取新打开标签放在
     */
    this.getNewTabAlignment=function()
    {
        return getOptionValue("NewTabAlignment");
    }

    /**
     * 设置双击关闭对应标签
     */
    this.setDbClickCloseTab=function(value)
    {
        setOptionValue("DbClickCloseTab", value);
    }

    /**
     * 获取双击关闭对应标签
     */
    this.getDbClickCloseTab=function()
    {
        return getOptionValue("DbClickCloseTab");
    }

    /**
     * 设置右击关闭对应标签
     */
    this.setRbClickCloseTab=function(value)
    {
        setOptionValue("RbClickCloseTab", value);
    }

    /**
     * 获取右击关闭对应标签
     */
    this.getRbClickCloseTab=function()
    {
        return getOptionValue("RbClickCloseTab");
    }

    /**
     * 设置关闭当前标签后，切换到
     */
    this.setTabClosePolicy=function(value)
    {
        setOptionValue("TabClosePolicy", value);
    }

    /**
     * 获取关闭当前标签后，切换到
     */
    this.getTabClosePolicy=function()
    {
        return getOptionValue("TabClosePolicy");
    }

    /**
     * 设置用户自定义主页选择
     */
    this.setCurSelHomePage=function(value)
    {
        setOptionValue("CurSelHomePage", value);
    }

    /**
     * 获取用户自定义主页选择
     */
    this.getCurSelHomePage=function()
    {
        return getOptionValue("CurSelHomePage");
    }

    /**
     * 设置清除指定时间
     */
    this.setCleanPrivacyTime=function(value)
    {
        setOptionValue("CleanPrivacyTime", value);
    }

    /**
     * 获取清除指定时间
     */
    this.getCleanPrivacyTime=function()
    {
        return getOptionValue("CleanPrivacyTime");
    }

    /**
     * 设置鼠标手势
     */
    this.setMouseGesture=function(value)
    {
        setOptionValue("MouseGesture", value);
    }

    /**
     * 获取鼠标手势
     */
    this.getMouseGesture=function()
    {
        return getOptionValue("MouseGesture");
    }

    /**
     * 设置关闭多标签提示
     */
    this.setCloseMultiTabTip=function(value)
    {
        setOptionValue("CloseMultiTabTip", value);
    }

    /**
     * 获取关闭多标签提示
     */
    this.getCloseMultiTabTip=function()
    {
        return getOptionValue("CloseMultiTabTip");
    }

    /**
     * 开始清除上网痕迹
     */
    this.startCleanPrivacy=function()
    {
        window.external.ExtCleanPrivacy(superCode, "0");
    }

    /**
     * 获取清除上网痕迹状态
     */
    this.getCleanPrivacyStatus=function()
    {
        return window.external.ExtCleanPrivacy(superCode, "1");
    }

    /**
     * 获取url图标
     */
    this.getUrlIconPath=function(url)
    {
        return window.external.ExtGetUrlIconPath(superCode, url);
    }

    /**
     * 检测默认浏览器
     */
    this.checkBrowser=function()
    {
        return window.external.ExtCheckBrowser(superCode);
    }

    /**
     * 设置默认浏览器
     */
    this.setDefBrowser=function()
    {
        window.external.ExtSetDefBrowser(superCode);
    }
	
	
		/**
     * 获取上次访问网页
     */
	this.ExtGetRestore=function()
    {
        return window.external.ExtGetRestore(superCode);
    }
	
	/**
     * 查询老板键
     */
    this.getBossKey=function()
